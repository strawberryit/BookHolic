<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:id="@+id/library_item_view"
    >

    <ImageView
        android:id="@+id/library_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@android:drawable/presence_invisible"
        />

    <ProgressBar
        android:id="@+id/search_progress"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintLeft_toRightOf="@id/library_icon"
        />

    <ImageView
        android:id="@+id/search_done"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@android:drawable/presence_online"
        app:layout_constraintLeft_toRightOf="@id/search_progress"
        />

    <ImageView
        android:id="@+id/search_fail"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@android:drawable/presence_busy"
        app:layout_constraintLeft_toRightOf="@id/search_done"
        />

    <TextView
        android:id="@+id/library_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="도서관 이름"
        app:layout_constraintLeft_toRightOf="@id/search_fail"
        />

    <TextView
        android:id="@+id/search_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="(123)"
        app:layout_constraintLeft_toRightOf="@id/library_name"
        />

</android.support.constraint.ConstraintLayout>